@model IEnumerable<ArvutiKomplektid.Models.ArvutiTellimus>

@{
    ViewBag.Title = "KorpusKuvar";
}

<h2>KorpusKuvar</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kirjeldus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Korpus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kuvar)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kirjeldus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Korpus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kuvar)
        </td>
        <td>
            @Html.ActionLink("Valmis Korpus", "KorpusMuut", new { id = item.Id})/
            @Html.ActionLink("Valmis Kuvar", "KuvarMuut", new { id = item.Id})/
            @Html.ActionLink("Mõlemad Valmis", "KorpusKuvarMuut", new { id = item.Id})
        </td>
    </tr>
}

</table>
