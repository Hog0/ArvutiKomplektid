@model IEnumerable<ArvutiKomplektid.Models.ArvutiTellimus>

@{
    ViewBag.Title = "Komplekteeri";
}

<h2>Komplekteeri</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kirjeldus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Korpus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kuvar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Komplekt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kirjeldus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Korpus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kuvar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Komplekt)
        </td>
        <td>
            @Html.ActionLink("Komplekteeritud", "KomplekteeritudMuut", new { id = item.Id, Komplekt = 1 })
        </td>
    </tr>
}

</table>
