<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<img src="~/img/logo.png" alt="Burger" width="50px" height="50px" margin-top="10px" />*@
                <a href="@Url.Action("Index", "Home")" class="links"><img  width="50px" height="50px" alt="picture" class="picture" src="~/img/logo.png"/></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("ArvutiTellimus", "Index", "ArvutiTellimus")</li>
                    <li>@Html.ActionLink("Lisa", "Lisa", "ArvutiTellimus")</li>
                    <li>@Html.ActionLink("Komplekteerimata", "Komplekteerimata", "ArvutiTellimus")</li>
                    <li>@Html.ActionLink("Muuda", "KorpusKuvar", "ArvutiTellimus")</li>
                    <li>@Html.ActionLink("Komplekteeri", "Komplekteeritud", "ArvutiTellimus")</li>
                    <li>@Html.ActionLink("Pakimisleht", "PakimisLeht", "ArvutiTellimus")</li>
                    <li>@Html.ActionLink("Statistika", "Statistikaleht", "ArvutiTellimus")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
